<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheet/output.css">
  <title>Login</title>
</head>
<body  class="bg-slate-900 h-screen w-screen text-white">
  <!-- logo section goes here -->
  <div class="text-4xl m-4">Durga Grocery</div>

<% if (error && error.length > 0) { %>
  <div id="flash-error" class="absolute bg-red-500 text-white p-2 rounded transition-opacity duration-500 top-5 left-182">
    <%= error[0] %>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div id="flash-error" class="absolute bg-green-500 text-white p-2 rounded transition-opacity duration-500 top-5 left-182">
    <%= success[0] %>
  </div>
<% } %>


  <!-- main body for sign up form  -->
  <div class= "h-auto w-90 flex flex-col justify-center items-center mx-auto my-auto  mt-10 md:border md:border-white  p-10 rounded-2xl">
    <div class="text-2xl mb-10">Log In</div>

    <!-- this is form for registration -->
      <form class="flex flex-col " method="POST" action="/login/user">
        <input class="border-b outline-none items-center mb-7 p-1 w-70" placeholder="Email" type="email" name="email" required>

        <div class="relative w-70 mb-7">
            <!-- Password input -->
            <input type="password" id="pw" 
                  class="border-b p-1 w-70 focus:outline-none"
                  placeholder="Password" name="password" required>

            <!-- Eye icon button -->
            <button type="button" id="eye" 
                    class="absolute right-0.5 top-0.5 text-gray-500 hover:text-gray-700 focus:outline-none"
                    onclick="togglePw()">
              <!-- Eye SVG -->
              <svg id="eye-open" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" 
                  stroke-width="2" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" 
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" 
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>

              <!-- Eye slash SVG (hidden by default) -->
           <svg id="eye-closed" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" 
           stroke-width="2" stroke="currentColor" class="w-5 h-5 hidden">
           <path stroke-linecap="round" stroke-linejoin="round" 
            d="M3 3l18 18M9.879 9.879a3 3 0 104.242 4.242M12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-2.036 0-3.918-.768-5.364-2.01" />
           </svg>
            </button>
          </div>

        <button class="bg-blue-600  mt-5 p-1 rounded-md hover:bg-blue-500 cursor-pointer">Log in</button>
        <div class="mt-5">
        <input class="bg-slate-900 hover:size-4" type="checkbox" id="remember" name="remember" value="1">
        <label for="remember">Remind me</label><br>
        </div>
      </form>
 
  <!-- this section make user to redirect to login page if already have account -->
   <div class="flex justify-center gap-3 mt-5">
    <div>Already have an account?</div>
    <div> 
      <a class="text-blue-600 underline hover:text-blue-500 mb-5" href="/register">sign up</a>
    </div>
   </div>
   <script type="text/javascript" src="/javascript/eyeToggle.js"></script>
   <script>
  setTimeout(() => {
    const error = document.getElementById('flash-error');
    const success = document.getElementById('flash-success');

    if (error) {
      error.style.opacity = '0';
      setTimeout(() => error.remove(), 500);
    }
  }, 2000); // ‚è± 2 seconds
</script>
</body>
</html>