<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script> 
  <link rel="stylesheet" href="stylesheet/output.css">
  <style>
    /* smooth transition for the card lift */
    .product-card { transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out; }
    .product-card:hover { transform: translateY(-4px); }

    .style-store{
  font-size: 1.25rem;
  font-weight: 700;
  background: linear-gradient(90deg, #4f46e5 0%, #8b5cf6 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  color: transparent;
  display: none;
}

@media (min-width: 768px) {
  .style-store {
    display: inline-block;
  }
}

  </style>
</head>
<body class="bg-slate-50 min-h-screen text-slate-800 font-sans">

  <nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200 shadow-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            
            <div class="flex-shrink-0">
                <a href="/dashboard">
                    <div class="flex items-center gap-3">
                        <div class="h-10 w-10 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold text-lg">DG</div>
                        <span class="hidden md:block text-xl font-bold bg-clip-text text-violet-600 ">DurgaGrocery</span>
                    </div>
                </a>
            </div>

            <div class="hidden md:flex items-center gap-8">
                
                <a href="/dashboard" class="text-sm font-medium text-indigo-600 border-b-2 border-indigo-600 pb-1">
                    Home
                </a>

                <div class="relative group"> <button id="catBtn" class="text-sm font-medium text-slate-500 hover:text-indigo-600 flex items-center gap-1 ">
                        Categories
                        <svg class="w-4 h-4" fill="none" stroke="currentColor"  viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>

                    <div id="catPanel" class="hidden  absolute top-full mt-2  left-1/2-translate-x-1/2 w-48 bg-white shadow-lg border border-slate-200 p-3 rounded-xl z-50">
                        <% 
                           let uniqueCategories = new Set(); 
                           products.forEach(p => uniqueCategories.add(p.category));
                        %>
                        <div class="space-y-1">
                            <% uniqueCategories.forEach(cat => { %>
                                <a href="/categories/<%= cat %>" class="block px-3 py-2 rounded-lg text-sm text-slate-700 hover:bg-slate-50 hover:text-indigo-600 transition">
                                    <%= cat %>
                                </a>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <a href="/orders" class="text-sm font-medium text-slate-500 hover:text-indigo-600 transition-colors">
                    Orders
                </a>
              <a href="/product/cart" class="text-sm font-medium text-slate-500 flex items-center gap-1">
            Cart
            <span class="bg-indigo-100 text-slate-500 text-[10px] font-bold px-2 py-px rounded-full"><%= totalQuantity %></span>
          </a>
            </div>

            <div class="flex items-center space-x-4">
              <form action="/product/search" method="post">
                <div class="relative "> <input type="text" placeholder="Search..." name="search" class="w-48 lg:w-64 pl-10 pr-4 py-2 bg-slate-100 border-none rounded-full text-sm focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all">
                    <svg class="w-5 h-5 text-slate-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
                </form>

                <div class="flex items-center gap-3  <%= !signin ? 'hidden' : '' %>">
                    <div class="h-9 w-9 rounded-full bg-slate-200 flex items-center justify-center text-slate-600 font-semibold text-sm">U</div>
                    <a href="/userlogout" class="hidden md:block text-sm font-medium text-slate-500 hover:text-red-500 transition-colors">Logout</a>
                </div>
                 <div class="flex items-center gap-3 <%= signin ? 'hidden' : '' %>">
                    <a href="/login" class="hidden md:block text-sm font-medium text-slate-500 hover:text-blue-500 transition-colors">LogIn</a>
                </div>

                <button class="md:hidden p-2 text-slate-600 hover:bg-slate-100 rounded-lg" id="mobile-menu-button">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                </button>
            </div>
        </div>
    </div>

    <div class="hidden md:hidden border-t border-slate-200 bg-white" id="mobile-menu">
        <div class="px-4 pt-2 pb-4 space-y-1">
            <a href="/dashboard" class="block px-3 py-2 rounded-md text-base font-medium text-indigo-600 bg-indigo-50">Home</a>
           
            <a href="/orders" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Order</a>
            <a href="/product/cart" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Cart</a>
            <a href="/logout" class="block px-3 py-2 rounded-md text-base font-medium text-red-500 hover:bg-red-50">Logout</a>
        </div>
    </div>
</nav>

  <main class="container mx-auto px-4 py-8">
   <% if (cartlogin && cartlogin.length > 0) { %>
                    <div id="flash-cart" class=" absolute top-20 left-200 bg-red-600 text-white p-2 rounded">
                      <%= cartlogin[0] %>
                    </div>
                  <% } %>
    
    <div class="flex flex-col md:flex-row justify-between items-start mb-8 gap-4">
      <div>
        <h1 class="text-2xl font-bold text-slate-900">Featured Products</h1>
        <p class="text-slate-500 mt-1">Check out our latest collection</p>
      </div>
    </div>

    <!-- product code start from here  -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
      
      <% products.forEach((product) => { %>
        
        <div class="product-card bg-white rounded-xl shadow-sm hover:shadow-xl overflow-hidden border border-slate-100 flex flex-col h-full group">
          <a href="/product/detail/<%= product.id %>">
          <div class="relative aspect-4/3 bg-gray-50 p-4 flex items-center justify-center overflow-hidden">
            <% if(product.offer || product.discount){ %>
              <div class="absolute top-2 left-2 z-10 flex flex-col gap-1">
                <% if(product.offer) { %>
                   <span class="px-2 py-1 bg-rose-500 text-white text-[10px] uppercase font-bold tracking-wider rounded shadow-sm"><%= product.offer %></span>
                <% } %>
                <% if(product.discount) { %>
                  <span class="px-2 py-1 bg-green-500 text-white text-[10px] font-bold rounded shadow-sm">-<%= product.discount %>%</span>
                <% } %>
              </div>
            <% } %>

            <% if (product.image[0] && product.image[0].data) { %>
              <img class="object-contain h-full w-full mix-blend-multiply group-hover:scale-105 transition-transform duration-500" 
                   src="data:<%= product.image[0].contentType %>;base64,<%= product.image[0].data.toString('base64') %>" 
                   alt="<%= product.productname %>">
            <% } else { %>
              <div class="text-slate-300 flex flex-col items-center">
                <svg class="w-12 h-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                <span class="text-xs">No Image</span>
              </div>
            <% } %>
          </div>
          </a>

          <div class="p-4 flex flex-col flex-grow">
            <h2 class="text-slate-800 font-semibold text-lg leading-tight mb-1 line-clamp-1" title="<%= product.productname %>">
              <%= product.productname %>
            </h2>
            
            <p class="text-slate-400 text-xs line-clamp-2 mb-3 h-8">
              <%= product.description || "Premium quality product available for immediate order." %>
            </p>

            <div class="mt-auto">
              <div class="flex items-baseline gap-2 mb-4">
                <% if (product.discount) { %>
                  <span class="text-xl font-bold text-slate-900">
                    Rs. <%= Math.round(product.price - (product.price * product.discount / 100)) %>
                  </span>
                  <span class="text-sm text-slate-400 line-through decoration-slate-400 decoration-1">
                    Rs. <%= product.price %>
                  </span>
                <% } else { %>
                  <span class="text-xl font-bold text-slate-900">Rs. <%= product.price %></span>
                <% } %>
              </div>

              <div class="flex items-center gap-2">
                
                <div class="flex items-center bg-slate-100 rounded-lg border border-slate-200 h-10 w-24 shrink-0">
                  <button class="minusBtn w-8 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 hover:bg-slate-200 rounded-l-lg transition-colors" data-id="<%= product._id %>">
                    -
                  </button>
                  <input class="quantityInput w-8 bg-transparent text-center text-sm font-semibold text-slate-700 focus:outline-none" 
                         data-id="<%= product._id %>" value="1" readonly>
                  <button class="plusBtn w-8 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 hover:bg-slate-200 rounded-r-lg transition-colors" data-id="<%= product._id %>">
                    +
                  </button>
                </div>
                 
                <form action="/cart/add/<%= product._id %>" method="POST" class="w-full add-to-cart-form">
  <input type="hidden" name="quantity" value="1">

  <button type="submit"
    class="add-btn w-full h-10 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg shadow-sm flex items-center justify-center gap-2 transition-all duration-200">

    <!-- Cart Icon -->
    <svg class="cart-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5
           M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17
           m0 0a2 2 0 100 4
           m-8 2a2 2 0 11-4 0" />
    </svg>

    <!-- Tick Icon (hidden initially) -->
    <svg class="tick-icon w-5 h-5 hidden text-green-300"
      fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M5 13l4 4L19 7" />
    </svg>

    <span class="hidden md:block btn-text">Add</span>
  </button>
</form>


              </div>
            </div>
          </div>
        </div>
        
      <% }) %>
    </div>
    
  </main>

  <script src="/javascript/mobileNabBar.js"></script>
  
  <script>
  setTimeout(() => {
    const cart = document.getElementById('flash-cart');

    if (cart) {
      cart.style.opacity = '0';
      setTimeout(() => cart.remove(), 500);
    }
  }, 2000);
</script>
<script>
  document.querySelectorAll('.add-to-cart-form').forEach(form => {
    form.addEventListener('submit', () => {
      const btn = form.querySelector('.add-btn');
      const cartIcon = btn.querySelector('.cart-icon');
      const tickIcon = btn.querySelector('.tick-icon');
      const text = btn.querySelector('.btn-text');

      // UI change
      cartIcon.classList.add('hidden');
      tickIcon.classList.remove('hidden');
      if (text) text.innerText = 'Added';

      btn.classList.remove('bg-indigo-600');
      btn.classList.add('bg-green-600');
    });
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Select all product cards on the dashboard
    const productCards = document.querySelectorAll('.product-card');

    productCards.forEach(card => {
      // Find elements within this specific card
      const minusBtn = card.querySelector('.minusBtn');
      const plusBtn = card.querySelector('.plusBtn');
      const visualInput = card.querySelector('.quantityInput');
      // Find the hidden input inside the form that actually sends the data
      const hiddenInput = card.querySelector('form input[name="quantity"]');

      if (!minusBtn || !plusBtn || !visualInput || !hiddenInput) return;

      // Increase Quantity
      plusBtn.addEventListener('click', (e) => {
        e.preventDefault(); // Stop page jump
        let currentVal = parseInt(visualInput.value) || 1;
        currentVal++;
        
        // Update both the visual box and the hidden form value
        visualInput.value = currentVal;
        hiddenInput.value = currentVal;
      });

      // Decrease Quantity
      minusBtn.addEventListener('click', (e) => {
        e.preventDefault(); // Stop page jump
        let currentVal = parseInt(visualInput.value) || 1;
        
        if (currentVal > 1) {
          currentVal--;
          
          // Update both the visual box and the hidden form value
          visualInput.value = currentVal;
          hiddenInput.value = currentVal;
        }
      });
    });
  });
</script>


</body>
</html>