  <script>
    // --- IMAGE SWAP ---
    function swapImg(clickedThumbnail) {
        const mainImg = document.getElementById('mainImg');
        const tempSrc = mainImg.src;
        mainImg.src = clickedThumbnail.src;
        clickedThumbnail.src = tempSrc;
    }

    // --- QUANTITY LOGIC ---
    document.addEventListener('DOMContentLoaded', () => {
        const minusBtn = document.querySelector('.minusBtn');
        const plusBtn = document.querySelector('.plusBtn');
        const qtyInput = document.querySelector('.quantityInput');
        const hiddenQty = document.getElementById('hiddenQty');

        if (plusBtn && minusBtn && qtyInput) {
            plusBtn.addEventListener('click', () => {
                let currentVal = parseInt(qtyInput.value);
                if (currentVal < 99) { // Max limit example
                    qtyInput.value = currentVal + 1;
                    hiddenQty.value = currentVal + 1;
                }
            });

            minusBtn.addEventListener('click', () => {
                let currentVal = parseInt(qtyInput.value);
                if (currentVal > 1) {
                    qtyInput.value = currentVal - 1;
                    hiddenQty.value = currentVal - 1;
                }
            });
        }
    });

    // --- COLOR SELECTION LOGIC ---
    function selectColor(color, btn) {
        // Update Hidden Input
        document.getElementById('hiddenColorInput').value = color;
        
        // Update Visual Text
        document.getElementById('selectedColorText').textContent = color;
        
        // Hide Error
        document.getElementById('formError').classList.add('hidden');

        // Update Button Styling (Tailwind Ring)
        const allBtns = document.querySelectorAll('.color-btn');
        allBtns.forEach(b => {
            b.classList.remove('color-active');
            b.classList.add('border-slate-300');
        });

        // Highlight selected
        btn.classList.remove('border-slate-300');
        btn.classList.add('color-active');
    }

    function validateForm() {
        const colorInput = document.getElementById('hiddenColorInput');
        // Check if color buttons exist on the page
        const colorBtns = document.querySelectorAll('.color-btn');
        
        // If there are colors to choose from, but none chosen:
        if (colorBtns.length > 0 && !colorInput.value) {
            document.getElementById('formError').classList.remove('hidden');
            return false; // Stop submission
        }
        return true; // Allow submission
    }

    // --- SORT REVIEWS LOGIC ---
    function sortReviews(sortType, btn) {
        const reviewsContainer = document.getElementById('reviewsList');
        let reviews = Array.from(reviewsContainer.querySelectorAll('.review-item'));

        reviews.sort((a, b) => {
            const ratingA = parseInt(a.getAttribute('data-rating'));
            const ratingB = parseInt(b.getAttribute('data-rating'));
            const timeA = parseInt(a.getAttribute('data-timestamp'));
            const timeB = parseInt(b.getAttribute('data-timestamp'));

            if (sortType === 'newest') return timeB - timeA;
            if (sortType === 'oldest') return timeA - timeB;
            if (sortType === 'highest') return ratingB - ratingA;
            if (sortType === 'lowest') return ratingA - ratingB;
            return 0;
        });

        const buttons = document.querySelectorAll('.filter-btn');
        buttons.forEach(b => {
            b.classList.remove('active', 'bg-indigo-600', 'text-white', 'border-indigo-600');
            b.classList.add('bg-white', 'text-slate-600', 'border-slate-200', 'hover:bg-slate-50');
        });
        btn.classList.add('active', 'bg-indigo-600', 'text-white', 'border-indigo-600');
        btn.classList.remove('bg-white', 'text-slate-600', 'border-slate-200', 'hover:bg-slate-50');

        reviews.forEach(review => reviewsContainer.appendChild(review));
    }
  </script>
