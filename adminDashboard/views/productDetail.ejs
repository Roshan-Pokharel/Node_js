<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheet/output.css">
  <title>Your Orders | StyleStore</title>
</head>

<body class="bg-slate-50 min-h-screen text-slate-800 font-sans">
  
  <nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200 shadow-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <a href="/dashboard">
          <div class="flex items-center gap-3">
            <div class="h-10 w-10 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold text-lg">S</div>
            <span class="hidden md:block text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-violet-600">
              StyleStore
            </span>
          </div>
        </a>
        <div class="hidden md:flex items-center gap-8 mr-68">
          <a href="/dashboard" class="text-sm font-medium text-slate-500 hover:text-indigo-600 transition-colors">Home</a>
          <div class="relative group"> 
    <button id="catBtn" class="text-sm font-medium text-slate-500 hover:text-indigo-600 flex items-center gap-1 transition-colors cursor-pointer">
        Categories
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
    </button>

    <div id="catPanel" class="hidden absolute top-full mt-2 left-1/2 -translate-x-1/2 w-48 bg-white shadow-lg border border-slate-200 p-3 rounded-xl z-50">
        <% 
           let uniqueCategories = new Set(); 
           /* IMPORTANT: We use 'productData' here, not 'products', 
              because 'products' only contains what is inside the cart */
           if (typeof productData !== 'undefined') {
               productData.forEach(p => uniqueCategories.add(p.category));
           }
        %>
        <div class="space-y-1">
            <% uniqueCategories.forEach(cat => { %>
                <a href="/categories/<%= cat %>" class="block px-3 py-2 rounded-lg text-sm text-slate-700 hover:bg-slate-50 hover:text-indigo-600 transition">
                    <%= cat %>
                </a>
            <% }) %>
        </div>
    </div>
          </div>
          <a href="/orders"  class="text-sm font-medium text-slate-500 hover:text-indigo-600 transition-colors">Orders</a>
           <a href="/product/cart" class="text-sm font-medium text-slate-500 hover:text-indigo-600 flex items-center gap-1 transition-colors cursor-pointer">
            Cart
            <span class="bg-indigo-100 text-slate-500 text-[10px] font-bold px-2 py-1 rounded-full"><%= totalQuantity %></span>
          </a>
        </div>
        <div class="flex items-center space-x-4">
          <div class="flex items-center gap-3">
            <div class="h-9 w-9 rounded-full bg-slate-200 flex items-center justify-center text-slate-600 font-semibold text-sm">U</div>
            <a href="/logout" class="hidden md:block text-sm font-medium text-slate-500 hover:text-red-500 transition-colors">Logout</a>
          </div>
           <button class="md:hidden p-2 text-slate-600 hover:bg-slate-100 rounded-lg" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </button>
        </div>
      </div>
    </div>
    <div class="hidden md:hidden border-t border-slate-200 bg-white" id="mobile-menu">
      <div class="px-4 pt-2 pb-4 space-y-1">
        <a href="/dashboard" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Home</a>
        <a href="/categories" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Categories</a>
        <a href="/orders" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Orders</a>
        <a href="/product/cart" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Cart</a>
        <a href="/logout" class="block px-3 py-2 rounded-md text-base font-medium text-red-500 hover:bg-red-50">Logout</a>
      </div>
    </div>
  </nav>

  <div class="max-w-xl md:max-w-5xl mx-auto px-2 py-4 md:px-4 md:py-10 grid grid-cols-2 gap-7 md:gap-12">

  <div class="flex flex-col ">

    <div class="relative bg-gradient-to-br from-slate-50 to-white rounded-xl p-2 md:p-8 shadow-sm border border-slate-200 flex items-center justify-center group h-55 md:h-auto">

      <% if(product.offer || product.discount){ %>
        <div class="absolute top-2 left-2 z-10 flex flex-col gap-1 md:gap-2">
          <% if(product.offer) { %>
            <span class="px-1.5 py-0.5 md:px-3 md:py-1 bg-rose-600 text-white text-[9px] md:text-[11px] uppercase font-semibold rounded-full">
              <%= product.offer %>
            </span>
          <% } %>

          <% if(product.discount) { %>
            <span class="px-1.5 py-0.5 md:px-3 md:py-1 bg-green-600 text-white text-[9px] md:text-[11px] font-semibold rounded-full">
              -<%= product.discount %>%
            </span>
          <% } %>
        </div>
      <% } %>

      <% if (product.image && product.image.length > 0) { %>
        <img 
          id="mainImg"
          class="h-full w-full object-contain rounded-lg md:h-96"
          src="data:<%= product.image[0].contentType %>;base64,<%= product.image[0].data.toString('base64') %>"
          alt="<%= product.productname %>"
        >
      <% } else { %>
        <div class="text-slate-300 flex flex-col items-center">
          <svg class="w-10 h-10 md:w-20 md:h-20 mb-1 md:mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 
                  012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 
                  00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-[10px] md:text-sm">No Image</span>
        </div>
      <% } %>

    </div>

    <% if (product.image && product.image.length > 1) { %>
      <div class="flex gap-1.5 md:gap-3 mt-2 md:mt-4 overflow-x-auto pb-1">
        <% product.image.forEach((img, index) => { %>
          <% if (index !== 0) { %>
            <img
              class="w-10 h-10 md:w-20 md:h-20 object-cover rounded-lg border cursor-pointer hover:ring-2 hover:ring-indigo-500"
              src="data:<%= img.contentType %>;base64,<%= img.data.toString('base64') %>"
              onclick="swapImg(this)"
              alt="Thumbnail"
            >
          <% } %>
        <% }) %>
      </div>
    <% } %>

  </div>

  <div class="flex flex-col space-y-2 md:space-y-6 justify-center">

    <h1 class="text-lg md:text-4xl font-bold leading-tight text-slate-900">
      <%= product.productname %>
    </h1>

    <p class="text-xs md:text-lg text-slate-700 opacity-80 line-clamp-2 md:line-clamp-none">
      <%= product.description %>
    </p>

    <div class="flex items-center gap-1 md:gap-3">
      <div class="flex items-center text-yellow-400">
         <% for(let i=1; i<=5; i++) { %>
            <svg class="w-4 h-4 md:w-5 md:h-5 <%= i <= product.rating ? 'fill-current' : 'text-slate-300 fill-current' %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
               <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
            </svg>
         <% } %>
      </div>
      <span class="text-[10px] md:text-sm text-slate-500"><%= product.reviews ? product.reviews.length : 0 %> reviews</span>
    </div>

    <div class="text-[10px] md:text-sm">
      <span class="text-slate-500">Brand:</span> 
      <span class="font-medium text-slate-800"><%= product.brand || 'Generic' %></span>
    </div>

    <div class="flex flex-wrap items-baseline gap-1 md:gap-3">
      <% if (product.discount) { %>
        <span class="text-lg md:text-4xl font-bold text-slate-900">
          Rs. <%= Math.round(product.price - (product.price * product.discount / 100)) %>
        </span>
        <span class="text-[10px] md:text-sm text-slate-400 line-through">Rs. <%= product.price %></span>
        <span class="text-[9px] md:text-sm font-semibold text-rose-600 bg-rose-100 px-1.5 py-0.5 rounded-full">
          <%= product.discount %>% off
        </span>
      <% } else { %>
        <span class="text-lg md:text-4xl font-bold text-slate-900">
          Rs. <%= product.price %>
        </span>
      <% } %>
    </div>

    <% if (product.colors && product.colors.length > 0) { %>
      <div class="mt-2">
          <span class="text-sm font-medium text-slate-700 block mb-2">
            Select Color: <span id="selectedColorText" class="text-slate-500 font-normal">None</span>
          </span>
          <div class="flex flex-wrap gap-3">
              <% product.colors.forEach((col) => { %>
                  <button 
                      type="button"
                      onclick="selectColor('<%= col %>', this)"
                      class="color-btn w-8 h-8 rounded-full border border-slate-300 shadow-sm focus:outline-none transition-all hover:scale-110"
                      style="background-color: <%= col %>;"
                      title="<%= col %>"
                  >
                  </button>
              <% }) %>
          </div>
      </div>
    <% } %>

    <div class="flex flex-col items-start gap-2 w-full pt-1 md:pt-4">

      <div class="flex w-full gap-2">
        <div class="flex items-center bg-white border border-slate-200 rounded-lg shadow-sm h-8 md:h-12 w-24 md:w-36 shrink-0">
          <button type="button" class="minusBtn w-8 md:w-12 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 cursor-pointer text-xs md:text-base">â€“</button>
          
          <input class="quantityInput w-full text-center font-semibold text-slate-700 bg-transparent text-xs md:text-base" 
                 value="1" readonly>

          <button type="button" class="plusBtn w-8 md:w-12 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 cursor-pointer text-xs md:text-base">+</button>
        </div>

        <form action="/cart/add/<%= product._id %>" method="POST" class="flex-1 min-w-0" onsubmit="return validateForm()">
          
          <input type="hidden" name="quantity" value="1" id="hiddenQty">
          <input type="hidden" name="selectedColor"  id="hiddenColorInput">

          <button type="submit" class="w-full h-8 md:h-12 bg-indigo-600 hover:bg-indigo-700 text-white text-[10px] md:text-sm font-medium rounded-lg shadow-md flex items-center justify-center gap-1 md:gap-2 active:scale-[0.98] cursor-pointer whitespace-nowrap px-1">
            <svg class="w-3 h-3 md:w-5 md:h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 
                2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 
                0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 
                0 2 2 0 014 0z"></path>
            </svg>
            Add to Cart
          </button>
        </form>
      </div>

      <p id="formError" class="text-red-500 text-xs font-semibold hidden">Please select a color</p>

    </div>

  </div>

</div>
  
<div class="mt-8 border-t border-slate-200 pt-6 max-w-xl md:max-w-5xl mx-auto px-4">
  <div class="flex flex-col md:flex-row md:items-center justify-between mb-6 gap-4">
    <h2 class="text-xl font-bold text-slate-800">Customer Reviews</h2>
    
    <div class="flex flex-wrap gap-2" id="reviewFilters">
      <button onclick="sortReviews('newest', this)" class="filter-btn active px-3 py-1 text-xs md:text-sm font-medium rounded-full border border-indigo-600 bg-indigo-600 text-white transition-colors">
        Newest
      </button>
      <button onclick="sortReviews('oldest', this)" class="filter-btn px-3 py-1 text-xs md:text-sm font-medium rounded-full border border-slate-200 bg-white text-slate-600 hover:bg-slate-50 transition-colors">
        Oldest
      </button>
      <button onclick="sortReviews('highest', this)" class="filter-btn px-3 py-1 text-xs md:text-sm font-medium rounded-full border border-slate-200 bg-white text-slate-600 hover:bg-slate-50 transition-colors">
        Highest Rated
      </button>
      <button onclick="sortReviews('lowest', this)" class="filter-btn px-3 py-1 text-xs md:text-sm font-medium rounded-full border border-slate-200 bg-white text-slate-600 hover:bg-slate-50 transition-colors">
        Lowest Rated
      </button>
    </div>
  </div>

  <div id="reviewsList" class="flex flex-col">
    <% 
      let reviews = product.reviews || [];
      // Initial Sort: Sort by date descending (Newest first)
      reviews.sort((a, b) => b.date.getTime() - a.date.getTime());

      if (reviews.length > 0) { 
        reviews.forEach(review => { 
    %>
        <div class="review-item mb-4 p-4 bg-slate-50 rounded-xl shadow-sm transition-all duration-300" 
             data-rating="<%= review.rating %>"
             data-timestamp="<%= review.date.getTime() %>">
          <div class="flex justify-between items-center">
            <span class="font-semibold text-slate-700"><%= review.userId ? review.userId.username : review.userName || 'Anonymous' %></span>
            <div class="flex text-yellow-400">
               <% for(let i=1; i<=5; i++) { %>
                  <svg class="w-4 h-4 <%= i <= review.rating ? 'fill-current' : 'text-slate-300 fill-current' %>" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                     <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                  </svg>
               <% } %>
            </div>
          </div>
          <p class="text-slate-600 mt-2"><%= review.comment %></p>
          <span class="text-xs text-slate-400 mt-1 block"><%= review.date.toDateString() %></span>
        </div>
    <% 
        }) 
      } else { 
    %>
      <p class="text-slate-400" id="noReviewsMessage">No reviews yet.</p>
    <% } %>
  </div>
</div>

<div class="max-w-xl md:max-w-5xl mx-auto px-4 pb-10">
    <form action="/product/<%= product._id %>/review" method="POST" class="mt-6 flex flex-col gap-3">
        
        <div class="flex flex-col gap-2">
        <label class="text-sm font-medium text-slate-700">Rate this product</label>
        
        <div class="flex flex-row-reverse justify-end w-fit">
            <input type="radio" id="star5" name="rating" value="5" class="peer/5 hidden" required />
            <label for="star5" class="cursor-pointer text-slate-300 peer-checked/5:text-yellow-400 hover:text-yellow-400 peer-hover/5:text-yellow-400 transition-colors">
            <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            </label>

            <input type="radio" id="star4" name="rating" value="4" class="peer/4 hidden" />
            <label for="star4" class="cursor-pointer text-slate-300 peer-checked/4:text-yellow-400 hover:text-yellow-400 peer-hover/4:text-yellow-400 peer-checked/5:text-yellow-400 peer-hover/5:text-yellow-400 transition-colors">
            <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            </label>

            <input type="radio" id="star3" name="rating" value="3" class="peer/3 hidden" />
            <label for="star3" class="cursor-pointer text-slate-300 peer-checked/3:text-yellow-400 hover:text-yellow-400 peer-hover/3:text-yellow-400 peer-checked/4:text-yellow-400 peer-hover/4:text-yellow-400 peer-checked/5:text-yellow-400 peer-hover/5:text-yellow-400 transition-colors">
            <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            </label>

            <input type="radio" id="star2" name="rating" value="2" class="peer/2 hidden" />
            <label for="star2" class="cursor-pointer text-slate-300 peer-checked/2:text-yellow-400 hover:text-yellow-400 peer-hover/2:text-yellow-400 peer-checked/3:text-yellow-400 peer-hover/3:text-yellow-400 peer-checked/4:text-yellow-400 peer-hover/4:text-yellow-400 peer-checked/5:text-yellow-400 peer-hover/5:text-yellow-400 transition-colors">
            <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            </label>

            <input type="radio" id="star1" name="rating" value="1" class="peer/1 hidden" />
            <label for="star1" class="cursor-pointer text-slate-300 peer-checked/1:text-yellow-400 hover:text-yellow-400 peer-hover/1:text-yellow-400 peer-checked/2:text-yellow-400 peer-hover/2:text-yellow-400 peer-checked/3:text-yellow-400 peer-hover/3:text-yellow-400 peer-checked/4:text-yellow-400 peer-hover/4:text-yellow-400 peer-checked/5:text-yellow-400 peer-hover/5:text-yellow-400 transition-colors">
            <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
            </label>
        </div>
        </div>

        <textarea name="comment" placeholder="Write your review here..." class="w-full p-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all resize-none h-24" required></textarea>
        
        <button type="submit" class="bg-indigo-600 text-white font-medium px-6 py-2.5 rounded-lg hover:bg-indigo-700 transition-colors shadow-sm w-full md:w-auto self-start">
        Submit Review
        </button>
    </form>

    <!-- related product section start from here  -->
       <div class="flex flex-col md:flex-row justify-between items-start mb-8 mt-8 gap-4">
        <h1 class="text-2xl font-bold text-slate-900">Related Products</h1>
    </div>
    <% if (relatedProducts.length === 0) { %>
    <p class="text-slate-500 mt-1">Nothing related to this Product</p>
<% } else { %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4  gap-6">
      
      <% relatedProducts.forEach((product) => { %>
        
        <div class="product-card bg-white rounded-xl shadow-sm hover:shadow-xl overflow-hidden border border-slate-100 flex flex-col h-full group">
          <a href="/product/detail/<%= product._id %>">
          <div class="relative aspect-4/3 bg-gray-50 p-4 flex items-center justify-center overflow-hidden">
            <% if(product.offer || product.discount){ %>
              <div class="absolute top-2 left-2 z-10 flex flex-col gap-1">
                <% if(product.offer) { %>
                   <span class="px-2 py-1 bg-rose-500 text-white text-[10px] uppercase font-bold tracking-wider rounded shadow-sm"><%= product.offer %></span>
                <% } %>
                <% if(product.discount) { %>
                  <span class="px-2 py-1 bg-green-500 text-white text-[10px] font-bold rounded shadow-sm">-<%= product.discount %>%</span>
                <% } %>
              </div>
            <% } %>

            <% if (product.image[0] && product.image[0].data) { %>
              <img class="object-contain h-full w-full mix-blend-multiply group-hover:scale-105 transition-transform duration-500" 
                   src="data:<%= product.image[0].contentType %>;base64,<%= product.image[0].data.toString('base64') %>" 
                   alt="<%= product.productname %>">
            <% } else { %>
              <div class="text-slate-300 flex flex-col items-center">
                <svg class="w-12 h-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                <span class="text-xs">No Image</span>
              </div>
            <% } %>
          </div>
          </a>

          <div class="p-4 flex flex-col flex-grow">
            <h2 class="text-slate-800 font-semibold text-lg leading-tight mb-1 line-clamp-1" title="<%= product.productname %>">
              <%= product.productname %>
            </h2>
            
            <p class="text-slate-400 text-xs line-clamp-2 mb-3 h-8">
              <%= product.description || "Premium quality product available for immediate order." %>
            </p>

            <div class="mt-auto">
              <div class="flex items-baseline gap-2 mb-4">
                <% if (product.discount) { %>
                  <span class="text-xl font-bold text-slate-900">
                    Rs. <%= Math.round(product.price - (product.price * product.discount / 100)) %>
                  </span>
                  <span class="text-sm text-slate-400 line-through decoration-slate-400 decoration-1">
                    Rs. <%= product.price %>
                  </span>
                <% } else { %>
                  <span class="text-xl font-bold text-slate-900">Rs. <%= product.price %></span>
                <% } %>
              </div>

              <div class="flex items-center gap-2">
                
                <div class="flex items-center bg-slate-100 rounded-lg border border-slate-200 h-10 w-24 shrink-0">
                  <button class="minusBtn w-8 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 hover:bg-slate-200 rounded-l-lg transition-colors" data-id="<%= product._id %>">
                    -
                  </button>
                  <input class="quantityInput w-8 bg-transparent text-center text-sm font-semibold text-slate-700 focus:outline-none" 
                         data-id="<%= product._id %>" value="1" readonly>
                  <button class="plusBtn w-8 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 hover:bg-slate-200 rounded-r-lg transition-colors" data-id="<%= product._id %>">
                    +
                  </button>
                </div>

                <form action="/cart/add/<%= product._id%>" method="POST" class="w-full">
