<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheet/output.css">
  <title>Document</title>
</head>
<body>
   <nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200 shadow-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        
        <div class="flex items-center gap-3">
            <div class="h-10 w-10 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold text-lg">S</div>
            <span class="hidden md:block text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-violet-600">
              StyleStore
            </span>
        </div>

        <div class="hidden md:flex items-center space-x-8">
          <a href="/dashboard" class="text-sm font-medium text-indigo-600 border-b-2 border-indigo-600 pb-1">Home</a>
          <a href="/categories" class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors">Categories</a>
          <a href="/products" class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors">Products</a>
          <a href="/orders" class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors">Orders</a>
        </div>

        <div class="flex items-center space-x-4">
          <div class="relative hidden sm:block">
            <input type="text" placeholder="Search..." 
                   class="w-48 lg:w-64 pl-10 pr-4 py-2 bg-slate-100 border-none rounded-full text-sm focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all">
            <svg class="w-5 h-5 text-slate-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          </div>

          <div class="flex items-center gap-3">
            <div class="h-9 w-9 rounded-full bg-slate-200 flex items-center justify-center text-slate-600 font-semibold text-sm">
              U
            </div>
            <a href="/logout" class="hidden md:block text-sm font-medium text-slate-500 hover:text-red-500 transition-colors">Logout</a>
          </div>

          <button class="md:hidden p-2 text-slate-600 hover:bg-slate-100 rounded-lg" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </button>
        </div>
      </div>
    </div>

    <div class="hidden md:hidden border-t border-slate-200 bg-white" id="mobile-menu">
      <div class="px-4 pt-2 pb-4 space-y-1">
        <a href="/dashboard" class="block px-3 py-2 rounded-md text-base font-medium text-indigo-600 bg-indigo-50">Home</a>
        <a href="/categories" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Categories</a>
        <a href="/products" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Products</a>
        <a href="/orders" class="block px-3 py-2 rounded-md text-base font-medium text-slate-600 hover:bg-slate-50">Orders</a>
        <a href="/logout" class="block px-3 py-2 rounded-md text-base font-medium text-red-500 hover:bg-red-50">Logout</a>
      </div>
    </div>
  </nav>
  <div class="max-w-xl md:max-w-5xl mx-auto px-2 py-4 md:px-4 md:py-10 grid grid-cols-2 gap-3 md:gap-12">

  <div class="flex flex-col">

    <div class="relative bg-gradient-to-br from-slate-50 to-white rounded-xl p-2 md:p-8 shadow-sm border border-slate-200 flex items-center justify-center group h-40 md:h-auto">

      <% if(product.offer || product.discount){ %>
        <div class="absolute top-2 left-2 z-10 flex flex-col gap-1 md:gap-2">
          <% if(product.offer) { %>
            <span class="px-1.5 py-0.5 md:px-3 md:py-1 bg-rose-600 text-white text-[9px] md:text-[11px] uppercase font-semibold rounded-full">
              <%= product.offer %>
            </span>
          <% } %>

          <% if(product.discount) { %>
            <span class="px-1.5 py-0.5 md:px-3 md:py-1 bg-green-600 text-white text-[9px] md:text-[11px] font-semibold rounded-full">
              -<%= product.discount %>%
            </span>
          <% } %>
        </div>
      <% } %>

      <% if (product.image && product.image.length > 0) { %>
        <img 
          id="mainImg"
          class="h-full w-full object-contain rounded-lg md:h-96"
          src="data:<%= product.image[0].contentType %>;base64,<%= product.image[0].data.toString('base64') %>"
          alt="<%= product.productname %>"
        >
      <% } else { %>
        <div class="text-slate-300 flex flex-col items-center">
          <svg class="w-10 h-10 md:w-20 md:h-20 mb-1 md:mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 
                  012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 
                  00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-[10px] md:text-sm">No Image</span>
        </div>
      <% } %>

    </div>

    <% if (product.image && product.image.length > 1) { %>
      <div class="flex gap-1.5 md:gap-3 mt-2 md:mt-4 overflow-x-auto pb-1">
        <% product.image.forEach((img, index) => { %>
          <% if (index !== 0) { %>
            <img
              class="w-10 h-10 md:w-20 md:h-20 object-cover rounded-lg border cursor-pointer hover:ring-2 hover:ring-indigo-500"
              src="data:<%= img.contentType %>;base64,<%= img.data.toString('base64') %>"
              onclick="swapImg(this)"
              alt="Thumbnail"
            >
          <% } %>
        <% }) %>
      </div>
    <% } %>

  </div>


  <div class="flex flex-col space-y-2 md:space-y-6 justify-center">

    <h1 class="text-lg md:text-4xl font-bold leading-tight text-slate-900">
      <%= product.productname %>
    </h1>

    <p class="text-xs md:text-lg text-slate-700 opacity-80 line-clamp-2 md:line-clamp-none">
      <%= product.description %>
    </p>

    <div class="flex items-center gap-1 md:gap-3">
      <div class="text-yellow-400 text-xs md:text-lg">⭐⭐⭐⭐⭐</div>
      <span class="text-[10px] md:text-sm text-slate-500"><%= product.rating %> reviews</span>
    </div>

    <div class="text-[10px] md:text-sm">
      <span class="text-slate-500">Brand:</span> 
      <span class="font-medium text-slate-800"><%= product.color %></span>
    </div>

    <div class="flex flex-wrap items-baseline gap-1 md:gap-3">
      <% if (product.discount) { %>
        <span class="text-lg md:text-4xl font-bold text-slate-900">
          Rs. <%= Math.round(product.price - (product.price * product.discount / 100)) %>
        </span>
        <span class="text-[10px] md:text-sm text-slate-400 line-through">Rs. <%= product.price %></span>
        <span class="text-[9px] md:text-sm font-semibold text-rose-600 bg-rose-100 px-1.5 py-0.5 rounded-full">
          <%= product.discount %>% off
        </span>
      <% } else { %>
        <span class="text-lg md:text-4xl font-bold text-slate-900">
          Rs. <%= product.price %>
        </span>
      <% } %>
    </div>

    <div class="flex flex-col md:flex-row items-start md:items-center gap-2 md:gap-4 w-full pt-1 md:pt-2">

      <div class="flex w-full gap-2">
        <div class="flex items-center bg-white border border-slate-200 rounded-lg shadow-sm h-8 md:h-12 w-24 md:w-36 shrink-0">
          <button class="minusBtn w-8 md:w-12 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 cursor-pointer text-xs md:text-base" 
                  data-id="<%= product._id %>">–</button>

          <input class="quantityInput w-full text-center font-semibold text-slate-700 bg-transparent text-xs md:text-base" 
                 data-id="<%= product._id %>" value="1" readonly>

          <button class="plusBtn w-8 md:w-12 h-full flex items-center justify-center text-slate-500 hover:text-indigo-600 cursor-pointer text-xs md:text-base" 
                  data-id="<%= product._id %>">+</button>
        </div>

        <form action="/cart/add/<%= product._id %>" method="POST" class="flex-1 min-w-0">
          <input type="hidden" name="quantity" value="1" class="hiddenQty" data-id="<%= product._id %>">

          <button class="w-full h-8 md:h-12 bg-indigo-600 hover:bg-indigo-700 text-white text-[10px] md:text-sm font-medium rounded-lg shadow-md flex items-center justify-center gap-1 md:gap-2 active:scale-[0.98] cursor-pointer whitespace-nowrap px-1">
            <svg class="w-3 h-3 md:w-5 md:h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 
                2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 
                0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 
                0 2 2 0 014 0z"></path>
            </svg>
            Add
          </button>
        </form>
      </div>

    </div>

  </div>

</div>

    <script src="/javascript/mobileNabBar.js"></script>
  <script src="/javascript/dropdown.js"></script>
  <script>
  function swapImg(clickedThumbnail) {
    // 1. Get the main image element
    const mainImg = document.getElementById('mainImg');

    // 2. Store the current Main Image source in a temporary variable
    const tempSrc = mainImg.src;

    // 3. Set Main Image to the Clicked Thumbnail's source
    mainImg.src = clickedThumbnail.src;

    // 4. Set the Clicked Thumbnail to the old Main Image source
    clickedThumbnail.src = tempSrc;
  }
</script>
  
</body>
</html>