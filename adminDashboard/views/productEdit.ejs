<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheet/output.css" />
  <title>Edit Product</title>
</head>

<body class="bg-slate-900 text-white font-medium">

  <!-- Header -->
  <header class="flex items-center justify-between px-8 py-5 border-b border-slate-800">
    <h1 class="text-2xl font-bold tracking-wide">Edit Product</h1>

    <a href="/product/crud"
      class="bg-purple-600 hover:bg-purple-700 active:scale-95 transition text-white font-semibold px-4 py-2 rounded-md shadow-md">
      Back
    </a>
  </header>


  <!-- Page Container -->
  <main class="max-w-5xl mx-auto px-6 pt-12 pb-20">

    <form action="/product/edited/<%= product._id %>" method="POST"  enctype="multipart/form-data" 
      class="bg-slate-800 border border-slate-700 rounded-2xl shadow-xl p-8 grid grid-cols-1 md:grid-cols-2 gap-8">

    <!-- product image  -->
     <div class="flex items-end gap-2">
      
      <div>
     <label class="block mb-2 text-sm font-semibold text-slate-300">Product Image</label>
    <input class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition cursor-pointer" type="file" name="image" multiple />
    </div>
    <% if (product.image[0] && product.image[0].data) { %>
    <img class="w-12 h-12 object-contain bg-slate-200 rounded"
      src="data:<%= product.image[0].contentType %>;base64,<%= product.image[0].data.toString('base64') %>"
      alt="<%= product.productname %>">
    </div>
    <% } else { %>
       <div class="w-12 h-12 bg-slate-300 rounded"></div>
    <% } %>

      <!-- Product Name --> 
      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Product Name</label>
        <input name="productname" type="text" required
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.productname %>"
          placeholder="Enter product name">
      </div>

      <!-- Price -->
      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Price</label>
        <input name="price" type="number" required
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.price %>"
          placeholder="Enter price">
      </div>

      <!-- Discount -->
      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Discount (%)</label>
        <input name="discount" type="number" min="0" max="100"
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.discount %>"
          placeholder="Optional">
      </div>

      <!-- Color -->
      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Color</label>
        <input name="color" type="text"
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.color %>"
          placeholder="e.g. red, black">
      </div>

      <!-- Offer -->
      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Offer</label>
        <input name="offer" type="text"
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.offer %>"
          placeholder="Write offer">
      </div>

      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Categories</label>
        <input name="category" type="text"
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.category %>"
          placeholder="Categories">
      </div>

      <div>
        <label class="block mb-2 text-sm font-semibold text-slate-300">Brand</label>
        <input name="brand" type="text"
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition" value="<%= product.brand %>"
          placeholder="Optional...">
      </div>

      <!-- Description -->
      <div class="md:col-span-2">
        <label class="block mb-2 text-sm font-semibold text-slate-300">Description</label>
        <textarea name="description" rows="4" required
          class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-4 py-3 focus:border-purple-500 focus:ring-purple-500 outline-none transition resize-none" 
          placeholder="Write product description..."><%= product.description %></textarea>
      </div>

      <!-- Submit Button -->
      <div class="md:col-span-2 flex justify-end mt-4">
        <button type="submit"
          class="bg-purple-600 hover:bg-purple-700 active:scale-95 transition text-white font-semibold px-8 py-3 rounded-lg shadow-lg">
          Edit Product
        </button>
      </div>

    </form>

  </main>

</body>
</html>
